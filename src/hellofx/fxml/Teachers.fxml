<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="hellofx.controllers.TeachersController" 
            fx:id="mainPane" 
            prefWidth="1024" 
            prefHeight="640"
            style="-fx-background-color: #F8F9FA;">
            
    <VBox spacing="32" alignment="TOP_CENTER" 
          AnchorPane.leftAnchor="32" 
          AnchorPane.rightAnchor="32" 
          AnchorPane.topAnchor="32" 
          AnchorPane.bottomAnchor="32">
          
        <HBox alignment="CENTER_LEFT">
            <Label text="Teacher Dashboard"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #202124;"/>
        </HBox>
        
        <GridPane hgap="24" vgap="24" alignment="CENTER">
            <!-- Top row: 3 cards -->
            <VBox spacing="16" alignment="CENTER"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 12; 
                         -fx-padding: 24; 
                         -fx-pref-width: 280; 
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 0);">
                <Label text="Course Management" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #202124;"/>
                <Label text="Edit and update course content" 
                       style="-fx-font-size: 14px; -fx-text-fill: #5F6368; -fx-wrap-text: true;"/>
                <Button fx:id="editCourseBtn" text="Manage Course"
                        style="-fx-background-color: #1a73e8; 
                               -fx-text-fill: white; 
                               -fx-font-size: 14px; 
                               -fx-background-radius: 4;
                               -fx-padding: 8 16;
                               -fx-cursor: hand;"/>
            </VBox>

            <VBox spacing="16" alignment="CENTER" GridPane.columnIndex="1"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 12; 
                         -fx-padding: 24; 
                         -fx-pref-width: 280;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 0);">
                <Label text="Student Marks" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #202124;"/>
                <Label text="Manage student grades and marks" 
                       style="-fx-font-size: 14px; -fx-text-fill: #5F6368; -fx-wrap-text: true;"/>
                <Button fx:id="marksBtn" text="Update Marks"
                        style="-fx-background-color: #1a73e8; 
                               -fx-text-fill: white; 
                               -fx-font-size: 14px; 
                               -fx-background-radius: 4;
                               -fx-padding: 8 16;
                               -fx-cursor: hand;"/>
            </VBox>

            <VBox spacing="16" alignment="CENTER" GridPane.columnIndex="2"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 12; 
                         -fx-padding: 24; 
                         -fx-pref-width: 280;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 0);">
                <Label text="Attendance" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #202124;"/>
                <Label text="Track student attendance records" 
                       style="-fx-font-size: 14px; -fx-text-fill: #5F6368; -fx-wrap-text: true;"/>
                <Button fx:id="attendanceBtn" text="Manage Attendance"
                        style="-fx-background-color: #1a73e8; 
                               -fx-text-fill: white; 
                               -fx-font-size: 14px; 
                               -fx-background-radius: 4;
                               -fx-padding: 8 16;
                               -fx-cursor: hand;"/>
            </VBox>

            <!-- Bottom row: 2 larger cards -->
            <VBox spacing="16" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnSpan="2"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 12; 
                         -fx-padding: 32; 
                         -fx-pref-width: 584;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 0);">
                <Label text="Student Management" 
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #202124;"/>
                <Label text="Enroll and manage student information" 
                       style="-fx-font-size: 14px; -fx-text-fill: #5F6368; -fx-wrap-text: true;"/>
                <Button fx:id="manageStudentsBtn" text="Manage Students"
                        style="-fx-background-color: #1a73e8; 
                               -fx-text-fill: white; 
                               -fx-font-size: 14px; 
                               -fx-background-radius: 4;
                               -fx-padding: 8 16;
                               -fx-cursor: hand;"/>
            </VBox>

            <VBox spacing="16" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="2"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 12; 
                         -fx-padding: 32; 
                         -fx-pref-width: 280;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 0);">
                <Label text="Reports" 
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #202124;"/>
                <Label text="Generate and export reports" 
                       style="-fx-font-size: 14px; -fx-text-fill: #5F6368; -fx-wrap-text: true;"/>
                <Button fx:id="reportBtn" text="Generate Report"
                        style="-fx-background-color: #1a73e8; 
                               -fx-text-fill: white; 
                               -fx-font-size: 14px; 
                               -fx-background-radius: 4;
                               -fx-padding: 8 16;
                               -fx-cursor: hand;"/>
            </VBox>
        </GridPane>
    </VBox>
</AnchorPane>
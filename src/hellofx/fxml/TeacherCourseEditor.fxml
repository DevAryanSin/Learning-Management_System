<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.controllers.TeacherCourseEditorController"
      spacing="18" alignment="CENTER" style="-fx-background-color: #181A20;" prefWidth="1024" prefHeight="640">
    <Label text="Edit Courses" style="-fx-font-size: 24px; -fx-text-fill: #2d75e8;"/>
    <TableView fx:id="courseTable" prefWidth="800">
        <columns>
            <TableColumn fx:id="codeColumn" text="Course Code"/>
            <TableColumn fx:id="titleColumn" text="Title"/>
            <TableColumn fx:id="descColumn" text="Description"/>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addButton" text="Add"/>
        <Button fx:id="editButton" text="Edit"/>
        <Button fx:id="deleteButton" text="Delete"/>
    </HBox>
</VBox>
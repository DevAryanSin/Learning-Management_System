<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.controllers.StudentMarksController"
      spacing="18" alignment="CENTER" style="-fx-background-color: white;" prefWidth="1024" prefHeight="640">
    <padding>
        <javafx.geometry.Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Academic Performance" style="-fx-font-size: 24px; -fx-text-fill: #00337C; -fx-font-weight: bold;"/>
    
    <!-- Performance Dashboard -->
    <HBox spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label fx:id="averageMarksLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <ProgressBar fx:id="performanceBar" prefWidth="200" progress="0.0"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER_RIGHT">
            <Label fx:id="gpaLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="highestMarkLabel"/>
            <Label fx:id="lowestMarkLabel"/>
        </VBox>
    </HBox>
    
    <TableView fx:id="marksTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="courseColumn" text="Course"/>
            <TableColumn fx:id="semColumn" text="Semester"/>
            <TableColumn fx:id="marksColumn" text="Marks"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
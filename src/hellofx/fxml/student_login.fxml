<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.controllers.StudentLoginController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <Label text="Student Login" style="-fx-font-size: 18px;"/>
    <TextField fx:id="emailField" promptText="Email ID"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Back" onAction="#onBack"/>
        <Button text="Login" onAction="#onLogin"/>
    </HBox>
</VBox>
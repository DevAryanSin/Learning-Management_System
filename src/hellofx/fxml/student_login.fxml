<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="32" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hellofx.controllers.StudentLoginController"
      style="-fx-background-color: linear-gradient(to bottom, #23395d, #181A20); -fx-min-width:1024; -fx-min-height:640;">
    <padding>
        <Insets top="60" right="60" bottom="60" left="60"/>
    </padding>
    <Label text="Student Login"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-padding: 0 0 18 0;"/>
    <VBox spacing="18" alignment="CENTER"
          style="-fx-background-color: #23262F; -fx-background-radius: 18; -fx-padding: 36 48; -fx-effect: dropshadow(gaussian, #111217, 12, 0.2, 0, 2);">
        <TextField fx:id="emailField" promptText="Email ID"
                   style="-fx-background-radius: 8; -fx-background-color: #181A20; -fx-text-fill: #F7FAFC; -fx-font-size: 16px;"/>
        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-radius: 8; -fx-background-color: #181A20; -fx-text-fill: #F7FAFC; -fx-font-size: 16px;"/>
        <HBox spacing="18" alignment="CENTER">
            <Button text="Back" onAction="#onBack"
                style="-fx-background-radius: 8; -fx-background-color: #00337C; -fx-text-fill: #F7FAFC; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 18 48; -fx-effect: dropshadow(gaussian, #111217, 8, 0.2, 0, 2);"/>
            <Button text="Login" onAction="#onLogin"
                style="-fx-background-radius: 8; -fx-background-color: #00337C; -fx-text-fill: #F7FAFC; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 18 48; -fx-effect: dropshadow(gaussian, #111217, 8, 0.2, 0, 2);"/>
            <Button text="Create Account" onAction="#showCreateAccount"
                style="-fx-background-radius: 8; -fx-background-color: #00337C; -fx-text-fill: #F7FAFC; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 18 48; -fx-effect: dropshadow(gaussian, #111217, 8, 0.2, 0, 2);"/>
        </HBox>
    </VBox>
</VBox>
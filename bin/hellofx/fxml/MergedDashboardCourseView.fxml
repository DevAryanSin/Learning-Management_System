<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.ColumnConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="hellofx.controllers.MergedDashboardCourseController"
            style="-fx-background-color: #FFFFFF;">
    
    <left>
        <VBox fx:id="sidebar" spacing="8" 
              style="-fx-background-color: #FFFFFF; 
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);
                     -fx-border-color: #E2E8F0;
                     -fx-border-width: 0 1 0 0;"
              prefWidth="250">
            <padding>
                <Insets top="20" right="16" bottom="20" left="16"/>
            </padding>
            
            <!-- App Logo/Title -->
            <Label text="Learning MS" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1a73e8;"/>
            <Separator/>
            
            <!-- Navigation Buttons -->
            <Button text="Dashboard" onAction="#showDashboard"
                    style="-fx-background-color: #E8F0FE; 
                           -fx-text-fill: #1a73e8;
                           -fx-font-size: 14px;
                           -fx-alignment: CENTER_LEFT;
                           -fx-padding: 12 16;
                           -fx-background-radius: 8;
                           -fx-cursor: hand;"/>
                           
            <Button text="Courses" onAction="#showCourses"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #5f6368;
                           -fx-font-size: 14px;
                           -fx-alignment: CENTER_LEFT;
                           -fx-padding: 12 16;
                           -fx-background-radius: 8;
                           -fx-cursor: hand;"/>
                           
            <Button text="Progress" onAction="#showProgress"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #5f6368;
                           -fx-font-size: 14px;
                           -fx-alignment: CENTER_LEFT;
                           -fx-padding: 12 16;
                           -fx-background-radius: 8;
                           -fx-cursor: hand;"/>
        </VBox>
    </left>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox spacing="24" style="-fx-padding: 24;">
                <!-- Profile Card -->
                <VBox fx:id="profileCard" spacing="16" 
                      style="-fx-background-color: #FFFFFF;
                             -fx-padding: 24;
                             -fx-background-radius: 12;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);">
                    <HBox spacing="16" alignment="CENTER_LEFT">
                        <ImageView fx:id="studentPhoto" fitHeight="120" fitWidth="120"
                                 style="-fx-background-radius: 60;">
                            <Image url="@../images/default_profile.png"/>
                        </ImageView>
                        <VBox spacing="8">
                            <Label fx:id="studentName" text="Student Name"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #202124;"/>
                            <Label fx:id="studentEmail" text="student@email.com"
                                   style="-fx-font-size: 14px; -fx-text-fill: #5F6368;"/>
                            <Label fx:id="studentId" text="ID: STU001"
                                   style="-fx-font-size: 14px; -fx-text-fill: #5F6368;"/>
                            <Label fx:id="studentAge" text="Age: 20"
                                   style="-fx-font-size: 14px; -fx-text-fill: #5F6368;"/>
                            <Label fx:id="studentPhone" text="Phone: +1234567890"
                                   style="-fx-font-size: 14px; -fx-text-fill: #5F6368;"/>
                            <Label fx:id="studentCourse" text="Course: Computer Science"
                                   style="-fx-font-size: 14px; -fx-text-fill: #5F6368;"/>
                        </VBox>
                    </HBox>
                </VBox>
                
                <!-- Performance Table -->
                <TableView fx:id="subjectPerformanceTable" 
                          style="-fx-background-color: #FFFFFF;
                                 -fx-background-radius: 12;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);">
                    <columns>
                        <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="200"/>
                        <TableColumn fx:id="marksColumn" text="Marks" prefWidth="100"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                
                <!-- Performance Chart -->
                <PieChart fx:id="pieChart" 
                         style="-fx-background-color: #FFFFFF;
                                -fx-background-radius: 12;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);"/>
                
                <!-- Course Grid -->
                <GridPane fx:id="courseGrid" hgap="16" vgap="16" 
                         style="-fx-background-color: #FFFFFF;
                                -fx-padding: 16;
                                -fx-background-radius: 12;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);"/>
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="hellofx.controllers.MergedDashboardCourseController"
            style="-fx-background-color: #181A20;">
    <!-- Sidebar -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #23262F; -fx-background-radius: 0 18 18 0;" prefWidth="180">
            <Label text="LMS" style="-fx-font-size: 28px; -fx-text-fill: #F7FAFC; -fx-font-weight: bold; -fx-padding: 30 0 10 0;" />
            <Separator style="-fx-background-color: #353945;" />
            <Label text="Dashboard" style="-fx-font-size: 16px; -fx-text-fill: #A0AEC0; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
            <Label text="Courses" style="-fx-font-size: 16px; -fx-text-fill: #A0AEC0; -fx-font-weight: bold;" />
            <Label text="Profile" style="-fx-font-size: 16px; -fx-text-fill: #A0AEC0; -fx-font-weight: bold;" />
            <Label text="Settings" style="-fx-font-size: 16px; -fx-text-fill: #A0AEC0; -fx-font-weight: bold;" />
        </VBox>
    </left>

    <!-- Header -->
    <top>
        <HBox style="-fx-background-color: #23262F; -fx-padding: 18 30 18 30; -fx-border-color: #353945; -fx-border-width: 0 0 1 0;" spacing="20" alignment="CENTER_LEFT">
            <Label text="Welcome to Your Dashboard" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #F7FAFC;" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <HBox spacing="40" alignment="TOP_CENTER" style="-fx-padding: 30;">
            <!-- Performance Section -->
            <VBox spacing="25" alignment="TOP_CENTER"
                  style="-fx-background-color: #23262F; -fx-padding: 25; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #111217, 12, 0.2, 0, 2);">
                <Label text="Subject Wise Performance" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2D75E8;" />
                <TableView fx:id="subjectPerformanceTable" prefWidth="340" style="-fx-background-radius: 10; -fx-background-color: #181A20;">
                    <columns>
                        <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="180"
                                     style="-fx-text-fill: #F7FAFC; -fx-font-size: 15px;"/>
                        <TableColumn fx:id="marksColumn" text="Marks" prefWidth="120"
                                     style="-fx-text-fill: #F7FAFC; -fx-font-size: 15px;"/>
                    </columns>
                </TableView>
                <PieChart fx:id="pieChart" title="Summary" prefWidth="320" prefHeight="220"
                          style="-fx-background-radius: 10; -fx-background-color: #181A20;"/>
            </VBox>

            <!-- Courses Section -->
            <VBox spacing="25" alignment="TOP_CENTER"
                  style="-fx-background-color: #23262F; -fx-padding: 25; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #111217, 12, 0.2, 0, 2);">
                <Label text="Available Courses" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2D75E8;" />
                <GridPane fx:id="courseGrid" hgap="20" vgap="20" style="-fx-padding: 10;" />
            </VBox>
        </HBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox style="-fx-background-color: #23262F; -fx-padding: 10 30; -fx-border-color: #353945; -fx-border-width: 1 0 0 0;" alignment="CENTER">
            <Label text="Â© 2023 Learning Management System" style="-fx-font-size: 14px; -fx-text-fill: #A0AEC0;" />
        </HBox>
    </bottom>
</BorderPane>
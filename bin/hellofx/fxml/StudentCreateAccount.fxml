<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.controllers.StudentLoginController" prefWidth="400" prefHeight="480" style="-fx-background-color: #f7f7fa;">
    <children>
        <VBox alignment="CENTER" spacing="18" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="40">
            <children>
                <Label text="Create Student Account" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2d75e8;"/>
                <TextField fx:id="nameField" promptText="Full Name" style="-fx-background-radius: 8;"/>
                <DatePicker fx:id="dobPicker" promptText="Date of Birth" style="-fx-background-radius: 8;"/>
                <TextField fx:id="createEmailField" promptText="Email" style="-fx-background-radius: 8;"/>
                <PasswordField fx:id="createPasswordField" promptText="Password" style="-fx-background-radius: 8;"/>
                <Button text="Create Account" style="-fx-background-color: #2d75e8; -fx-text-fill: white; -fx-background-radius: 8;" onAction="#onCreateAccount"/>
                <Button text="Back to Login" style="-fx-background-color: transparent; -fx-text-fill: #2d75e8;" onAction="#onBack"/>
            </children>
            <padding>
                <Insets top="30" left="40" right="40" bottom="30"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
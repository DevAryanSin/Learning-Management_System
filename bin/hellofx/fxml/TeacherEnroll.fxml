<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.controllers.TeacherEnrolledStudentsController"
      spacing="18" alignment="CENTER" style="-fx-background-color: #181A20;" prefWidth="1024" prefHeight="640">
    <Label text="Enrolled Students" style="-fx-font-size: 24px; -fx-text-fill: #2d75e8;"/>
    <ComboBox fx:id="courseCombo" promptText="Select Course"/>
    <TableView fx:id="studentTable" prefWidth="800">
        <columns>
            <TableColumn fx:id="rollColumn" text="Roll Number"/>
            <TableColumn fx:id="nameColumn" text="Name"/>
        </columns>
    </TableView>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="32.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="hellofx.controllers.WelcomeController"
      style="-fx-background-color: #FFFFFF; -fx-min-width: 1024; -fx-min-height: 640;">
    <padding>
        <Insets top="40" right="60" bottom="60" left="60"/>
    </padding>
    
    <Label text="Learning Management System"
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;"/>
    <Label text="Choose your login type"
           style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
           
    <HBox alignment="CENTER" spacing="40">
        <!-- Student Login Box -->
        <VBox alignment="CENTER" maxWidth="300" maxHeight="300"
              style="-fx-background-color: #FFFFFF; 
                     -fx-background-radius: 12; 
                     -fx-border-radius: 12; 
                     -fx-border-color: #E2E8F0; 
                     -fx-border-width: 1; 
                     -fx-padding: 32;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 20, 0, 0, 4);
                     -fx-translate-y: 0;
                     -fx-transition: all 0.2s ease;">
            <Label text="Student" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2D3748;"/>
            <Button text="Login"
                    onAction="#onStudentLogin"
                    style="-fx-background-radius: 8; -fx-background-color: #4299E1; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 32; -fx-cursor: hand;"/>
        </VBox>
        
        <!-- Teacher Login Box -->
        <VBox alignment="CENTER" maxWidth="300" maxHeight="300"
              style="-fx-background-color: #FFFFFF; 
                     -fx-background-radius: 12; 
                     -fx-border-radius: 12; 
                     -fx-border-color: #E2E8F0; 
                     -fx-border-width: 1; 
                     -fx-padding: 32;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 20, 0, 0, 4);
                     -fx-translate-y: 0;
                     -fx-transition: all 0.2s ease;">
            <Label text="Teacher" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2D3748;"/>
            <Button text="Login"
                    onAction="#onTeacherLogin"
                    style="-fx-background-radius: 8; -fx-background-color: #4299E1; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 32; -fx-cursor: hand;"/>
        </VBox>
    </HBox>
</VBox>